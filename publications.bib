@article{fields_complete_2024,
	title = {Complete mitochondrial genomes of \textit{{Notropis} oxyrhynchus} and \textit{{Notropis} buccula} ({Cypriniformes}: {Leuciscidae})},
	volume = {9},
	issn = {2380-2359},
